
<layout-elements>

  <element>
 <id>abstract_swing_button</id>
    <type>BUTTON</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>    
      <insets>5,5,5,5</insets>    
      <weightx>0</weightx> 
      <weighty>0</weighty> 
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>mainButtonTexture</background-image>
      <orientation>0</orientation>      
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>
    </background>   
  </element>

  <element>
    <id>aboutMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>FILL_PARENT</width>
      <height>FILL_PARENT</height>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>about</background-image>
      <orientation>0</orientation>
      <image-width>ORIGINAL</image-width>
      <image-height>ORIGINAL</image-height>
      <image-position>CENTER</image-position>
    </background>
    <position>CENTER</position>
    <elements>
      <element>
        <id>text_about</id>
        <type>TEXT</type>
        <text textcolor="fpsColor">@textabout</text>        
        <layout>
          <width>300</width>
          <height>20</height>
          <scrolling speedy="2"/>          
        </layout>
        <background>
              <background-color>transColor</background-color>
        </background>
        <position>CENTER</position>
      </element>
    </elements>    
  </element>
  
  <element>
    <id>introMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>500</width>      
      <height>500</height>
      <minwidth>FILL_PARENT</minwidth>
      <minheight>FILL_PARENT</minheight>
      <weightx>1</weightx>
      <weighty>1</weighty>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>intro</background-image>
      <orientation>0</orientation>
      <image-width>ORIGINAL</image-width>
      <image-height>ORIGINAL</image-height>
      <image-position>CENTER</image-position>
    </background>
    <position>CENTER</position>       
  </element>
  
  <element>
    <id>gameMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>INGAME</layout-type>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>intro</background-image>
      <orientation>0</orientation>
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>
    </background>    
  </element>
  
  <element>
    <id>loadcreateMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>FILL_PARENT</width>
      <height>FILL_PARENT</height>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>load</background-image>
      <orientation>0</orientation>
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>
    </background>
    <position>CENTER</position>
    <elements>
      <element>
        <id>text_habout</id>
        <type>PANEL</type>
        <layout>
          <layout-type>GRIDBAGSWING</layout-type>
          <width>400</width>
          <height>FILL_PARENT</height>
        </layout>
        <background>
        <background-color>selectedColor</background-color>
        <orientation>0</orientation>
        <image-width>FILL</image-width>
        <image-height>FILL</image-height>
        <image-position>CENTER</image-position>
        </background>
      </element>
    </elements>    
  </element>
  
  <element>
    <id>mainMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>FILL_PARENT</width>
      <height>FILL_PARENT</height>
      <fill>BOTH</fill>
      <weightx>1</weightx>
      <weighty>1</weighty>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>main</background-image>
      <orientation>0</orientation>
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>      
    </background> 
    <position>CENTER</position>    
    <elements>
      <element>
        <id>btn_newgame</id>
        <template>abstract_swing_button</template>
        <text>@newgame</text>        
        <action>SETMENU@loadcreateMenu</action>
        <layout>
          <x>0</x>      
          <y>0</y>
        </layout>
      </element>
      <element>
        <id>btn_about</id>
        <template>abstract_swing_button</template>
        <text>@about</text>        
        <action>SETMENU@about</action>
        <layout>
          <x>0</x>      
          <y>1</y>
        </layout>
      </element>
      <element>
        <id>ListView01</id>
        <type>LIST</type>        
        <layout>
          <layout-type>GRIDBAGSWING</layout-type>    
          <insets>5,5,5,5</insets>    
          <weightx>0</weightx> 
          <weighty>0</weighty>
          <width>400</width>
          <height>400</height>
          <actions>
            <action click="2" clicktype="onListElement">LOAD@LIST#_id</action>
          </actions>
          <x>1</x>
          <y>0</y> 
          <rows-layout>DIAGONALROWS</rows-layout>
          <rows-max>2</rows-max>
          <cols-max>3</cols-max>
        </layout>
        <background>
          <background-color>fpsColor</background-color>   
        </background> 
        <listdata data="[[gameMenu,@newgame]]">
          <list-element>
            <id>rowTextListView01</id>
            <type>TEXT</type>
            <text>No Data</text>
            <layout>
              <layout-type>GRIDBAGSWING</layout-type>
              <width>100</width>
              <height>20</height>
            </layout>
            <background>
              <background-color>transColor</background-color>
            </background>
            <position>CENTER</position>                          
          </list-element>
        </listdata>
      </element>
    </elements>
  </element>
</layout-elements>
