
<layout-elements>

  <element>
 <id>abstract_swing_button</id>
    <type>BUTTON</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>    
      <insets>5,5,5,5</insets>    
      <weightx>0</weightx> 
      <weighty>0</weighty>
      <width>300</width>
      <height>20</height> 
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>mainButtonTexture</background-image>
      <orientation>0</orientation>      
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>
    </background>   
  </element>
  <element>
        <id>text_ss</id>
        <type>EDITTEXT</type>
        <text textcolor="fpsColor">@textabout</text>        
        <layout>
          <width>AUTO</width>
          <height>AUTO</height>               
        </layout>
        <background>
              <background-color>transColor</background-color>
        </background>
        <position>TOP</position>
  </element>


  <element>
    <id>aboutMenu</id>
    <type>PANEL</type>
    <layout>
      <width>FILL_PARENT</width>
      <height>FILL_PARENT</height>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>about</background-image>
      <orientation>0</orientation>
      <image-width>ORIGINAL</image-width>
      <image-height>ORIGINAL</image-height>
      <image-position>CENTER</image-position>
    </background>
    <position>CENTER</position>
    <elements>
      <element>
        <id>text_about</id>
        <type>TEXT</type>
        <text textcolor="fpsColor">@textabout</text>        
        <layout>
          <width>AUTO</width>
          <height>AUTO</height>
          <scrolling speedy="2"/>          
        </layout>
        <background>
              <background-color>transColor</background-color>
        </background>
        <position>CENTER</position>
      </element>
      <element>
        <id>text_edit</id>
        <type>EDITTEXT</type>
        <text textcolor="fpsColor">@textabout</text>        
        <layout>
          <width>AUTO</width>
          <height>AUTO</height>                  
        </layout>
        <background>
              <background-color>Black</background-color>
        </background>
        <position>TOP</position>
      </element>
    </elements>    
  </element>
  
  <element>
    <id>introMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>AUTO</width>      
      <height>AUTO</height>
      <minwidth>AUTO</minwidth>
      <minheight>AUTO</minheight>
      <weightx>1</weightx>
      <weighty>1</weighty>
    </layout>
    <actions>
      <action type="KEY" code="VK_W">COMPOP@ADD_COMP#text_ss</action>
    </actions>
    <background>
      <background-color>Black</background-color>
      <background-image>intro</background-image>
      <orientation>0</orientation>
      <image-width>ORIGINAL</image-width>
      <image-height>ORIGINAL</image-height>
      <image-position>CENTER</image-position>
    </background>
    <position>CENTER</position>    
  </element>
  
  <element>
    <id>gameMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>INGAME</layout-type>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>intro</background-image>
      <orientation>0</orientation>
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>
    </background>    
  </element>
  
  <element>
    <id>loadcreateMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>FILL_PARENT</width>
      <height>FILL_PARENT</height>
      <weightx>1</weightx>
      <weighty>1</weighty>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>load</background-image>
      <orientation>0</orientation>
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>
    </background>
    <position>CENTER</position>
    <elements>    
      <element>
        <id>CreateWorld1</id>
        <template>abstract_swing_button</template>
        <text size="20.0f">@newgame</text>
        <action>SETMENU@aboutMenu</action>   
        <layout>   
          <weightx>1</weightx>
          <weighty>0</weighty>  
          <x>0</x>      
          <y>0</y>       
        </layout>
        <position>CENTER</position>   
      </element>             
      <element>
        <id>SaveView01</id>
        <type>LIST</type>        
        <layout>
          <layout-type>GRIDBAGSWING</layout-type>    
          <width>400</width>
          <height>FILL_PARENT</height>          
          <actions>
            <action click="2" clicktype="onListElement">LOAD@LIST#_id</action>
          </actions>
          <weightx>1</weightx>
          <weighty>0</weighty>      
          <x>1</x>
          <y>0</y> 
          <rows-layout>HORIZONTALROWS</rows-layout>
          <rows-max>AUTOTYPE</rows-max>
          <cols-max>1</cols-max>
        </layout>
        <position>TOP</position>
        <background>
          <background-color>selectedColor</background-color>   
        </background> 
        <listdata data="[[gameMenu,@newgame]]">
        <list-element>
            <id>rowTextSaveView01</id>
            <type>TEXT</type>
            <text size="20.0f">No Data</text>
            <layout>
              <layout-type>GRIDBAGSWING</layout-type>
              <width>100</width>
              <height>20</height>
            </layout>
            <background>
              <background-color>transColor</background-color>
            </background>
            <position>CENTER</position>                          
          </list-element>          
        </listdata>
      </element>     
    </elements>    
  </element>
  
  <element>
    <id>mainMenu</id>
    <type>PANEL</type>
    <layout>
      <layout-type>GRIDBAGSWING</layout-type>
      <width>800</width>
      <height>600</height>
      <fill>BOTH</fill>
      <weightx>1</weightx>
      <weighty>1</weighty>
    </layout>
    <background>
      <background-color>Black</background-color>
      <background-image>main</background-image>
      <orientation>0</orientation>
      <image-width>FILL</image-width>
      <image-height>FILL</image-height>
      <image-position>CENTER</image-position>      
    </background> 
    <position>CENTER</position>    
    <elements>
      <element>
        <id>btn_newgame</id>
        <template>abstract_swing_button</template>
        <text size="20.0f">@newgame</text>        
        <action>SETMENU@loadcreateMenu</action>
        <layout>
          <x>0</x>      
          <y>0</y>
        </layout>
        <position>CENTER</position>
      </element>
      <element>
        <id>btn_about</id>
        <template>abstract_swing_button</template>
        <text>@about</text>        
        <action>SETMENU@aboutMenu</action>
        <layout>
          <x>0</x>      
          <y>1</y>
        </layout>
      </element>
      <element>
        <id>ListView01</id>
        <type>LIST</type>        
        <layout>
          <layout-type>GRIDBAGSWING</layout-type>    
          <insets>5,5,5,5</insets>    
          <weightx>0</weightx> 
          <weighty>0</weighty>
          <width>400</width>
          <height>400</height>          
          <x>1</x>
          <y>0</y> 
          <rows-layout>DIAGONALROWS</rows-layout>
          <rows-max>2</rows-max>
          <cols-max>3</cols-max>
        </layout>
        <actions>
            <action click="2" clicktype="onListElement">LOAD@LIST#_id</action>
        </actions>
        <background>
          <background-color>fpsColor</background-color>   
        </background> 
        <listdata data="[#SAVE(NAME,NAME)]">
          <list-element>
            <id>rowTextListView01</id>
            <type>TEXT</type>
            <text>No Data</text>
            <layout>
              <layout-type>GRIDBAGSWING</layout-type>
              <width>100</width>
              <height>20</height>
            </layout>
            <background>
              <background-color>transColor</background-color>
            </background>
            <position>CENTER</position>                          
          </list-element>
        </listdata>
      </element>
    </elements>
  </element>
</layout-elements>
